  sleep 0.5
  play :C2
  sleep 0.5
  play :e2
  sleep 0.5
  play :g2
  sleep 0.5
  play :B2
  sleep 0.5
  play :C3
  sleep 0.5
  play :e3
  sleep 0.5
  play :g3
  sleep 0.5
  play :B3
  sleep 0.5
  play :C3
  sleep 0.5
  play :e3
  sleep 0.5
  play :g3
  sleep 0.5
  play :B3
